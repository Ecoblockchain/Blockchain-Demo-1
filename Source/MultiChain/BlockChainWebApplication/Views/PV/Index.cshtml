@model Data
@{
    ViewBag.Title = "Your Personal Value Certificate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section JavaScript{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-slider/9.7.0/bootstrap-slider.min.js"></script>
    <script type="text/javascript">$(document).ready(function () { WebApp.Core.HighlightCurrentMenuItem('Personal Value') });</script>
}
@section CSS{
    <link type="text/css" rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-slider/9.7.0/css/bootstrap-slider.min.css">
    <style type="text/css">
        body {
            color: #333;
            font-size: 14px;
            line-height: 1.42857;
        }

        .value_bg {
            background: rgba(0, 0, 0, 0) url("/assets/images/persoanl_value.png") no-repeat scroll center top;
            /*height: 125px;*/
            font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
            padding: 217px 0 50px 5px;
        }

        .corners1 {
            border: 1px solid #134363;
            border-radius: 7px;
            height: 58px;
            width: 160px;
        }

        .value_text {
            color: #134363;
            font: 700 42px/55px "Open Sans",sans-serif;
            text-align: center;
        }

        p {
            margin: 0 0 10px;
        }

        a {
            color: #3c8dbc;
        }
    </style>
}

<div class="page-header">
    <div class="page-header-content">
        <div class="page-title">
            <h4><span class="text-semibold">Your Personal Value Certificate</span></h4>
        </div>
        <div class="heading-elements">
            <div class="heading-btn-group">
                <a class="btn btn-link btn-float has-text" href="/pv/calculate"><i class="icon-office"></i><span>Calculate Your Personal Value</span></a>
            </div>
        </div>
    </div>
</div>
<div class="content">
    <div class="panel panel-flat">
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    @{
                        if (Model != null)
                        {
                            <div style="border: 5px ridge #ffd800; padding: 5px 0 25px;">
                                <div class="value_bg" align="center" style="overflow:hidden;">
                                    <div class="corners1" style="overflow:hidden;">
                                        <div class="value_text" style="overflow:hidden;">
                                            @{
                                                User _user = ViewBag.User;

                                                if (_user.PVUpdaterStatus != null)
                                                {
                                                    if (_user.PVUpdaterStatus == true)
                                                    {
                                                        <font color="green">@(_user.PV != null ? _user.PV : (decimal)Model.pv)</font>

                                                    }
                                                    else
                                                    {
                                                        <font color="red">@(_user.PV != null ? _user.PV : (decimal)Model.pv)</font>
                                                    }
                                                }
                                                else
                                                {
                                                    @(_user.PV != null ? _user.PV : (decimal)Model.pv)
                                                }

                                            }

                                        </div>
                                    </div>
                                </div>
                                <p style="font-size:125%; font-weight:bold;" align="center"><a href="www.seratio.com">www.seratio.com</a></p>

                                <p style="font-size:125%; font-weight:bold;" align="center"> @(string.IsNullOrEmpty(AppManager.User.NickName) ? "@" + AppManager.User.Username : AppManager.User.NickName)</p>
                                @*<p style="font-size:125%; font-weight:bold;" align="center"> @Model.email </p>*@
                                <p style="font-size:125%; font-weight:bold;" align="center"> @(ViewBag.User != null ? ViewBag.User.LastUpdatedOn : Model.updated_at)</p>
                                <p style="font-size:80%; font-weight:bold;" align="center"> The ratio is how much social value you create compared to your financial value</p>
                            </div>
                                                }
                                                else
                                                {
                                                    <div class="text-center">
                                                        You do not have your Personal Value calculated. Please proceed to Calculate your Personal Value now.
                                                    </div>
                                                }
                    }
                </div>
            </div>
        </div>
    </div>
</div>