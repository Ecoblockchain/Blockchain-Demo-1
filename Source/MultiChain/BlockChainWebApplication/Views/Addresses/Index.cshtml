@model List<string>

@{
    ViewBag.Title = "Addresses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section JavaScript{
    <script type="text/javascript">$(document).ready(function () { WebApp.Core.HighlightCurrentMenuItem('Addresses') });</script>
}

<div class="page-header">
    <div class="page-header-content">
        <div class="page-title">
            <h4><span class="text-semibold">Addresses</span></h4>
        </div>
        <div class="heading-elements">
            <div class="heading-btn-group">
                <a class="btn btn-link btn-float has-text" href="/Addresses/create"><i class="icon-googleplus5 text-primary"></i><span>Create Address</span></a>
            </div>
        </div>
    </div>
   
</div>
<div class="content">
    <div class="panel panel-flat">
        <table class="table data-table-local table-bordered table-striped table-hover">
            <thead>
                <tr>
                    <th style="width:100px;">Sl. No.</th>
                    <th>Address</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int i = 1;

                    foreach (string _address in Model)
                    {
                        <tr>
                            <td style="width:100px;">@i</td>
                            <td>@_address</td>
                        </tr>

                        i++;
                    }
                }
            </tbody>
        </table>
    </div>
</div>
