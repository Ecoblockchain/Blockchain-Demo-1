@model BlockChainWebApplication.Models.Request

@{
    ViewBag.Title = "Requests";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section JavaScript{
    <script type="text/javascript">$(document).ready(function () { WebApp.Core.HighlightCurrentMenuItem('Requests') });</script>
}

@section CSS{

}

<div class="page-header">
    <div class="page-header-content">
        <div class="page-title">
            <h4><span class="text-semibold">Requests</span></h4>
        </div>
        <div class="heading-elements">
            <div class="heading-btn-group">
                <a class="btn btn-link btn-float has-text" href="/requests/send"><i class="icon-googleplus5 text-primary"></i><span>Send Request</span></a>
            </div>
        </div>
    </div>
   
</div>
<div class="content">
    <div class="panel panel-flat">
        <table class="table data-table table-bordered table-striped table-hover" data-source="/requests/list/" data-key="5">
            <thead>
                <tr>
                    <th>
                        Sender
                    </th>
                    <th>
                        Receiver
                    </th>
                  
                    <th>
                        Sent On
                    </th>
                    <th>
                        Status
                    </th>
                    <th>
                        Replied On
                    </th>
                    <th class="no-sort">Options</th>

                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>

</div>
