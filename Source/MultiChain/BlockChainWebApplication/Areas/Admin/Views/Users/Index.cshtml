@model BlockChainWebApplication.Models.User

@{
    ViewBag.Title = "Manage Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section JavaScript{
    <script type="text/javascript">$(document).ready(function () { WebApp.Core.HighlightCurrentMenuItem('Users') });</script>
}

@section CSS{

}

<div class="page-header">
    <div class="page-header-content">
        <div class="page-title">
            <h4><span class="text-semibold">Manage Users</span></h4>
        </div>
        <div class="heading-elements">
            <div class="heading-btn-group">
                <a class="btn btn-link btn-float has-text" href="/admin/users/create"><i class="icon-googleplus5 text-primary"></i><span>Create User</span></a>
            </div>
        </div>
    </div>
    
</div>
<div class="content">
    <div class="panel panel-flat">
        <table class="table data-table-local table-bordered table-striped table-hover" data-source="/admin/users/list/" data-key="4">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Phone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LastUpdatedOn)
                    </th>
                    <th class="text-center no-sort">Options</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>

</div>
